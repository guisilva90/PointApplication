<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.guimbalino.pointapplication.TelaLogin">

    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        facebook:com_facebook_login_text=""
        android:background="@drawable/login"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:layout_marginTop="64dp"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/iconePoint"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="59.7dp"
        android:layout_height="59.7dp"
        android:background="@drawable/point_icone_3"
        android:layout_marginTop="215dp"
        android:id="@+id/iconePoint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
